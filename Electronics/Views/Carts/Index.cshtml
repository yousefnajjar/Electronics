@model dynamic


@{
Layout = "~/Views/Shared/_Hplayout.cshtml";
ViewData["Title"] = "";
}

<style>

    table.table {
    margin-top: 124px;
      }
      h1 {
    padding-top: 145px;
      
}
</style>

<h1>My Cart</h1>

@*//////////////////////////////////////////////////////////////////*@
<table class="table">
<thead>
<tr>
<th>
Product Name
</th>
<th>
Product Price
</th>
<th>
Image
</th>
</tr>
</thead>
<tbody>

@foreach (var item1 in Model.products)
{
<tr>
<td>
@item1.ProductName
</td>
<td>
@item1.ProductPrice
</td>
<td>
<img src="@Url.Content("~/Image/"+item1.ImagePath)" alt="Image..." width="100" height="100"
style="border-radius:50px" />
</td>
<td>
<a asp-action="Delete" asp-route-id="@item1.ProductId" type="button" class="btn btn-secondary">Delete</a>
</td>
</tr>
}

</tbody>
</table>


