@model IEnumerable<Electronics.Models.Category>

@{
    ViewData["Title"] = "Index";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<h4>Our Categories</h4>
<style>
    .btn.btn-secondary {
    color: #ffffff;
    background-color: #6b6b6b;
    border-color: #6b6b6b;}

    .btn {
    display: inline-block;
    font-weight: 400;
    line-height: 0.5;
    color: #212529;
    text-align: center;
    text-decoration: none;
    vertical-align: middle;
    cursor: pointer;
    -webkit-user-select: none;
    -moz-user-select: none;
    user-select: none;
    background-color: transparent;
    border: 0px solid transparent;
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    border-radius: 0.25rem;
    transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
}
.table thead tr th {
    font-size: 1.063rem;
    font-weight: bold;
}
</style>
<p>
    <a asp-action="Create" style="color: #6b6b6b; text-decoration: none;">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td><td></td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-secondary">Edit</a> |
               @* <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-secondary">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-secondary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
