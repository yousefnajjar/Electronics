@{
    Layout = "~/Views/Shared/_Accountant.cshtml";
}
@model dynamic

<head>
    <script src="https://code.jquery.com/jquery-3.1.0.min.js"></script>
    <script src="~/js/report.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
.table thead tr th {
    font-size: 1.063rem;
    font-weight: bold;
}
.btn.btn-success {
    color: #fff;
    background-color: #6b6b6b;
    border-color: #6b6b6b;
}   
</style>
</head>
<body>
<div class="col-md-12">


<h4 >Excel Report</h4>


<button id="export" class="btn btn-success text-white" onclick="fnExcelReport('dataTable', 'data')">Excel</button>
<div class="card-block table-border-style">
<div class="table-responsive">
<table class="table table-hover" id="dataTable">
<thead>
<tr>
<th>Employee Salarys</th>
<th>Profits</th>
<th>Losses</th>
</tr>
</thead>
<tbody>
<tr>
<td>@Model.userSalary $</td>
@if (@Model.orderSold < @Model.userSalary)
{
<td>none</td>
<td>@(@Model.userSalary - @Model.orderSold)</td>
}
else if (@Model.orderSold >= @Model.userSalary)
{
<td>@(@Model.orderSold - @Model.userSalary ) </td>
}
</tr>
</tbody>
</table>
</div>
</div>
</div>
<script>
</script>
</body>
