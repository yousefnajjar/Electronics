@model IEnumerable<Electronics.Models.Website>

@{
    ViewData["Title"] = "Index";
}
@*@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@
<h4>Our Website</h4>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<head>
<style>
.table thead tr th {
    font-size: 1.063rem;
    font-weight: bold;
}
.btn.btn-secondary {
    color: #ffffff;
    background-color: #6b6b6b;
    border-color: #6b6b6b;}

    .btn {
    display: inline-block;
    font-weight: 400;
    line-height: 0.5;
    color: #212529;
    text-align: center;
    text-decoration: none;
    vertical-align: middle;
    cursor: pointer;
    -webkit-user-select: none;
    -moz-user-select: none;
    user-select: none;
    background-color: transparent;
    border: 0px solid transparent;
    padding: 0.375rem 0.75rem;
    font-size: 1rem;
    border-radius: 0.25rem;
    transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
}
</style>
</head>
<table class="table">
    <thead>
        <tr>
            <th>
              Web Name
            </th>
            <th>
             Web logo
            </th>
            <th>
             Web Background
             </th>
            <th>
               Address
            </th>
            <th>
               Phone
            </th>
            <th>
               Email
            </th>
            @*<th>
                Card
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WebName)
            </td>
            <td>
                  <img src= "@Url.Content("~/Image/"+item.WebImagelogoPath) "alt="Images..." width="100" height="100"/>
            </td>
            <td>
                  <img src= "@Url.Content("~/Image/"+item.WebImagePackgroundPath) "alt="Images..." width="100" height="100"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => item.Card.CardId)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.WebId" class="btn btn-secondary">Edit</a> |
            @*    <a asp-action="Details" asp-route-id="@item.WebId">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.WebId" class="btn btn-secondary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
