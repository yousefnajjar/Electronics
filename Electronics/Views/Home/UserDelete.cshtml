@model Electronics.Models.UserLogin

@{
    ViewData["Title"] = "UserDelete";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<head>
    <style>
        a {
    color: #7a7a7a;
    text-decoration: none;
}
.btn.btn-danger {
    color: #fff;
    background-color: #6b6b6b;
    border-color: #6b6b6b;}
    </style>
</head>
<h4>Delete User</h4>

<h3>Are you sure you want to delete this?</h3>
<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           First Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fname)
        </dd>
        <dt class = "col-sm-2">
           Last Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lname)
        </dd>
        <dt class = "col-sm-2">
          Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserEmail)
        </dd>
        <dt class = "col-sm-2">
         Password
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserPassword)
        </dd>
        <dt class = "col-sm-2">
          Address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
          Image
        </dt>
        <dd class = "col-sm-10">
           <img src=@Url.Content("~/Image/" + Model.UserImagepath) asp-append-version="true" width="50" height="50" />

        </dd>
     
    </dl>
    
    <form asp-action="UserDelete">
        <input type="hidden" asp-for="UserId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="UserView">Back to List</a>
    </form>
</div>
